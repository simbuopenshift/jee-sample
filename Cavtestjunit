import java.util.List;
import java.util.stream.Collectors;

public class Main {
    public static void main(String[] args) {
        List<String> column = List.of("a", "b"); // Sample list
        String result = constructPipeSeparatedValue(column);
        System.out.println("Pipe separated value: " + result);
    }

    public static String constructPipeSeparatedValue(List<String> list) {
        return String.join("|", list);
    }
}
