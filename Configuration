import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.context.annotation.Configuration;
import org.springframework.core.env.Environment;

@Configuration
@ConfigurationProperties(prefix = "")
public class YourConfigurationProperties {

    @Autowired
    private Environment environment;

    private String prefix;

    public YourConfigurationProperties() {
        // Retrieve the prefix value from the environment variable
        this.prefix = environment.getProperty("your.prefix.property");
    }

    // Getters and setters for other configuration properties

    public String getPrefix() {
        return prefix;
    }

    public void setPrefix(String prefix) {
        this.prefix = prefix;
    }
}
